<!-- res/layout/item_course.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/courseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/professorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseNameTextView"
        android:layout_marginTop="8dp"
        android:text="Professor Name"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/creditHoursTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/professorNameTextView"
        android:layout_marginTop="8dp"
        android:text="Credit Hours"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/gradeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creditHoursTextView"
        android:layout_marginTop="8dp"
        android:text="Grade"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/lectureDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradeTextView"
        android:layout_marginTop="8dp"
        android:text="Lecture Date and Time"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/sectionDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lectureDateTimeTextView"
        android:layout_marginTop="8dp"
        android:text="Section Date and Time"
        android:textSize="16sp"/>
</RelativeLayout>
